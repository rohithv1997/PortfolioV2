@page "/"
@using PortfolioV2.Models

<PageTitle>Home</PageTitle>


<LoadDataComponent T="ContactInfo" FilePath="data/contact.json">
    <ChildContent Context="info">
        <MudText Typo="Typo.h6">
            Full Stack Developer&nbsp;
            <MudIcon Icon="@Icons.Material.Sharp.LocationCity" Style="vertical-align: middle;"/>
            &nbsp;@info.Location
        </MudText>

        <MudSpacer></MudSpacer>

        <MudList T="string">
            <MudElement HtmlTag="a"
                        Class="ms-1"
                        Style="font-weight:bold;"
                        href="@info.Github"
                        target="_blank"
                        rel="noopener noreferrer">
                <MudListItem Icon="@Icons.Custom.Brands.GitHub" IconSize="Size.Large"/>
            </MudElement>
            <MudElement HtmlTag="a"
                        Class="ms-1"
                        Style="font-weight:bold;"
                        href="@info.LinkedIn"
                        target="_blank"
                        rel="noopener noreferrer">
                <MudListItem Icon="@Icons.Custom.Brands.LinkedIn" IconSize="Size.Large"/>
            </MudElement>
            <MudElement HtmlTag="a"
                        Class="ms-1"
                        Style="font-weight:bold;"
                        href="@info.Resume"
                        target="_blank"
                        rel="noopener noreferrer">
                <MudListItem Icon="@Icons.Custom.FileFormats.FilePdf" IconSize="Size.Large"/>
            </MudElement>
            <MudElement HtmlTag="a"
                        Class="ms-1"
                        Style="font-weight:bold;"
                        href="@info.EmailLink"
                        rel="noopener noreferrer">
                <MudListItem Icon="@Icons.Custom.Brands.Gmail" IconSize="Size.Large"/>
            </MudElement>
        </MudList>
    </ChildContent>
</LoadDataComponent>
